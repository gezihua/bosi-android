<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_item_intro"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true" >
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/tv_itemlayout_comtime"
        android:layout_toRightOf="@+id/iv_item_intro"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_itemlayout_fname"
            style="@style/style_app_black_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="good" >
        </TextView>

        <TextView
            android:id="@+id/tv_itemlayout_fcomment"
            style="@style/style_app_black_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="good" >
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_itemlayout_comtime"
        style="@style/style_app_black_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="good" >
    </TextView>

</RelativeLayout>