<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/popu_search_panel_citys"
    android:gravity="center_horizontal"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/ll_provice"
      android:layout_margin="5dp"
      android:gravity="center_vertical"
      >
      <TextView
          android:id="@+id/tv_hint_provice"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="省份"
          style="@style/style_app_headtitle"
          ></TextView>
      
      <Spinner 
          android:layout_width="240dp" 
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:id="@+id/sp_provice"
           />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
       android:id="@+id/ll_city"
      android:gravity="center_vertical"
       android:layout_margin="5dp"
      >
      <TextView
          android:id="@+id/tv_hint_city"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="城市"
          style="@style/style_app_headtitle"
          ></TextView>
      
       <Spinner 
          android:layout_width="240dp" 
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:id="@+id/sp_city"
           />
  </LinearLayout>
  
    <LinearLayout
        android:layout_margin="5dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
       android:gravity="center_vertical"
       android:id="@+id/ll_area"
      >
         <TextView
          android:id="@+id/tv_hint_area"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="地区"
          style="@style/style_app_headtitle"
          ></TextView>
         
          <Spinner 
          android:layout_width="240dp" 
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:id="@+id/sp_area"
          
           />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cancle"
            android:layout_weight="1"
            style="@style/style_app_headtitle"
            android:text="取消"
            ></TextView>
          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_sure"
            android:layout_weight="1"
             style="@style/style_app_headtitle"
              android:text="完成"
              android:gravity="right"
            ></TextView>
    </LinearLayout>
    
</LinearLayout>