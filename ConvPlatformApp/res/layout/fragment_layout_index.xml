<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/headactionbar"
        layout="@layout/main_head" />


    <LinearLayout
        android:id="@+id/ll_container_categorys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_container_headview"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_below="@+id/headactionbar"
        android:id="@+id/ll_container_lists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>

</RelativeLayout>