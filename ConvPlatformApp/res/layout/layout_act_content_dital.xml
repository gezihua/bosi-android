<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >

        <ImageView
            android:id="@+id/iv_icon_headimg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/abaose" >
        </ImageView>

        <TextView
            android:id="@+id/tv_title"
            style="@style/style_app_black_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_icon_headimg"
            android:text="good" >
        </TextView>

        <!--
             <RatingBar 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/style_rating_normal"
            android:id="@+id/rb_dital"
            android:numStars="5"
            android:rating="4"
            android:layout_alignParentRight="true"
            ></RatingBar>
        -->

        <TextView
            android:id="@+id/tv_comment"
            style="@style/style_app_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_icon_headimg"
            android:maxLines="3"
            android:text="67890-" />

        <TextView
            android:id="@+id/tv_sendtime"
            style="@style/style_app_black_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="今天 20:20" >
        </TextView>
    </RelativeLayout>
    
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@drawable/icon_separator"
        android:layout_marginLeft="70dp"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_actname"
                style="@style/style_app_black_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="妙靓修身堂" >
            </TextView>

            <RatingBar
                android:id="@+id/rb_dital"
                style="@style/style_rating_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:numStars="5"
                android:rating="4" >
            </RatingBar>
        </RelativeLayout>

        <ImageView
            android:layout_width="280dp"
            android:scaleType="fitXY"
            android:id="@+id/iv_shopimg"
            android:layout_height="120dp" >
        </ImageView>

        <TextView
            android:id="@+id/tv_ditalplace"
            style="@style/style_app_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="详细地址" >
        </TextView>

        <TextView
            android:id="@+id/tv_actiontime"
            style="@style/style_app_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="执行时间" >
        </TextView>

        <TextView
            android:id="@+id/tv_price"
            style="@style/style_app_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="活动价格" >
        </TextView>
    </LinearLayout>
    
     <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/icon_separator"
        ></View>

</LinearLayout>