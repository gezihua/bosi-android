<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
  <RelativeLayout
        android:id="@+id/ll_imagechoice_container"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal" >
        
      <include 
          android:id="@+id/view_chat_choiceimg_camera"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          layout="@layout/item_layout_imagevtv"
           />
      
         
      <include 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="5dp"
          android:layout_toRightOf="@+id/view_chat_choiceimg_camera"
          android:id="@+id/view_chat_choiceimg_local"
          layout="@layout/item_layout_imagevtv"
           />
       
    </RelativeLayout>
</LinearLayout>
