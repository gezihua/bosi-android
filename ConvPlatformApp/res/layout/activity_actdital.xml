<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <include
        android:id="@+id/headactionbar"
        layout="@layout/common_head" />

    <LinearLayout
        android:id="@+id/ll_container_condital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headactionbar"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_container_joindital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_container_condital"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_container_compent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
        android:layout_below="@+id/ll_container_joindital"
        android:orientation="vertical" />


</RelativeLayout>