<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_persional_mybooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:orientation="vertical" >

        <TextView
            style="@style/style_app_black_16"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableEnd="@drawable/jiantou"
            android:gravity="center_vertical"
            android:text="我的预约" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/listitem_selector" >
        </View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_persional_mysended"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            style="@style/style_app_black_16"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableEnd="@drawable/jiantou"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:text="我的服务" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/listitem_selector" >
        </View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_persional_system"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            style="@style/style_app_black_16"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableEnd="@drawable/jiantou"
            android:gravity="center_vertical"
            android:text="个人资料" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/listitem_selector" >
        </View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_persional_editmyinfodital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:orientation="vertical" >

        <TextView
            style="@style/style_app_black_16"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableEnd="@drawable/jiantou"
            android:gravity="center_vertical"
            android:text="模特资料" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/listitem_selector" >
        </View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_persional_systemsetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            style="@style/style_app_black_16"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableEnd="@drawable/jiantou"
            android:gravity="center_vertical"
            android:text="系统设置" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/listitem_selector" >
        </View>
    </LinearLayout>

</LinearLayout>