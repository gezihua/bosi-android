<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_item_intro"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true" >
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/ll_itemlayoutcontentplace"
        android:layout_toRightOf="@+id/iv_item_intro"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_itemlayout_fname"
            style="@style/style_app_black_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="good" >
        </TextView>

        <TextView
            android:id="@+id/tv_itemlayout_ftag"
            style="@style/style_app_black_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="good" >
        </TextView>
        
        <TextView
            android:id="@+id/tv_itemlayout_fcomment"
            style="@style/style_app_black_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="good" >
        </TextView>
    </LinearLayout>

    <RatingBar 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/style_rating_normal"
            android:id="@+id/rb_dital"
            android:numStars="5"
            android:rating="4"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            ></RatingBar>

    <LinearLayout
        android:id="@+id/ll_itemlayoutcontentplace"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/iv_hint_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_nearby_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>