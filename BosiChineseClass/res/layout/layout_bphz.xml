<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/common_head"
         	 android:id="@+id/headactionbar"
         />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
          <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_bphz_body"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:background="@drawable/temp_bg"
        >
        
    </LinearLayout>
        <LinearLayout
            android:layout_marginRight="40dp"
            android:layout_marginBottom="2dp"
            android:layout_alignRight="@+id/ll_bphz_body"
            android:layout_alignBottom="@+id/ll_bphz_body"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/bphz_remote_body"
            ></LinearLayout>
        
        
    </RelativeLayout>
  
</LinearLayout>
