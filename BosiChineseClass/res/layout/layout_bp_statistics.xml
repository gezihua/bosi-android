<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- jjzlk -->

   <LinearLayout
        android:id="@+id/rl_bphz_item_body"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="vertical" >
	
        <TextView
            android:id="@+id/tv_bp_statistic_totalnum"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="200"
            android:background="@drawable/bg_bp_dital_stastic_num"
            android:gravity="center"
            android:layout_marginTop="5dp"
            ></TextView>
        
        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/umeng_fb_arrow_right"
            android:visibility="gone"
              android:id="@+id/bt_bphz_statistic_next"
            ></Button>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_layout_bphz_item_checkpoint"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <Button
                 android:id="@+id/bt_bphz_statistic_unrenumber"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="10"
                android:background="@drawable/bphz_levunlearn_number_bg"
                ></Button>
             <Button
                  android:id="@+id/bt_bphz_statistic_renumber"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="12"
                android:background="@drawable/bphz_levlearn_num_bg"
                ></Button>
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>