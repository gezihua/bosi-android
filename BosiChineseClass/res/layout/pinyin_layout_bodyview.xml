<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/common_head"
             android:id="@+id/headactionbar"
          />
    
    
    <LinearLayout
       android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_pinyin_sym_item_dital"
        android:orientation="horizontal"
        android:background="@drawable/pyxx_bg"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            
            
            <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:id="@+id/ll_pylearn_leftbody"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:gravity="center"
            android:background="#ffffff"
             />
            <ImageView
                android:id="@+id/iv_pyxx_sm"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/pyxx_sm_bg"
                android:layout_marginLeft="20dp"
                ></ImageView>
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/pyxy_ym_bg"
                android:layout_marginLeft="50dp"
                ></ImageView>
            
        </RelativeLayout>
        
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_pylearn_rightbody"
            android:orientation="vertical"
            ></LinearLayout>
        </LinearLayout>
    

</LinearLayout>
