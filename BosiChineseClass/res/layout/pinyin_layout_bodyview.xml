<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/common_head"
             android:id="@+id/headactionbar"
          />
    
    
    <LinearLayout
       android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_pinyin_sym_item_dital"
        android:orientation="horizontal"
        android:background="@drawable/pyxx_bg"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/ll_pylearn_leftbody"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical" >
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_pyxx_sm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pyxx_sm_bg" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pyxy_ym_bg" />

        </RelativeLayout>
        <ImageView
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/pingyin_learn_spit" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ll_pylearn_rightbody"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/pinyinlearn_"
                 android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                 android:orientation="horizontal"
                android:layout_marginRight="10dp"
                >
                
                
                
            </LinearLayout>
             <LinearLayout
                android:id="@+id/pinyinlearn_menu_bt"
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                 android:orientation="horizontal"
                android:layout_marginRight="10dp"
                >
                 <Button
                     android:layout_width="match_parent"
                     android:layout_weight="1"
                     android:layout_height="40dp"
                     android:text="发音要领"
                     android:background="@drawable/pingying_learn_btbg"
                     ></Button>
                 <Button
                     android:layout_width="match_parent"
                     android:layout_weight="1"
                     android:layout_height="40dp"
                     android:background="@drawable/pingying_learn_btbg"
                     android:text="拼一拼"
                     ></Button>
                 <Button
                    android:layout_width="match_parent"
                     android:layout_weight="1"
                     android:layout_height="40dp"
                     android:background="@drawable/pingying_learn_btbg"
                     android:text="读一读"
                     ></Button>
                 
             </LinearLayout>
             
             <LinearLayout
                android:id="@+id/pinyinlearn_dital"
                 android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                 android:orientation="horizontal"
                android:layout_marginRight="10dp"
                ></LinearLayout>
            
        </LinearLayout>
        </LinearLayout>
    

</LinearLayout>
