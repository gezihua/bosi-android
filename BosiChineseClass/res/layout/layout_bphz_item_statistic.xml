<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  <!--   android:background="@drawable/bphz_levitem_bg" -->
    <LinearLayout
        android:id="@+id/rl_bphz_item_body"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/bphz_item_statistic_bg"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >
	
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="200"
            android:background="@drawable/bphz_item_statistic_totalbg"
            android:gravity="center"
            android:layout_marginTop="5dp"
            ></TextView>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_layout_bphz_item_checkpoint"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <Button
                 android:id="@+id/bt_bphz_item_unrenumber"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="10"
                android:background="@drawable/bphz_levunlearn_number_bg"
                ></Button>
             <Button
                  android:id="@+id/bt_bphz_item_renumber"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="12"
                android:background="@drawable/bphz_levlearn_num_bg"
                ></Button>
        </LinearLayout>
        
         <TextView
             android:id="@+id/tv_bphz_clearalldata"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="5dp"
            android:text="清除全部"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_marginTop="5dp"
            ></TextView>
    </LinearLayout>

</LinearLayout>
