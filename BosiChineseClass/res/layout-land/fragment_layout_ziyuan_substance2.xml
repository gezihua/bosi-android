<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:background="@drawable/bg_fragment_category" >

    <RelativeLayout
        android:id="@+id/normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.bosi.chineseclass.han.view.IconImageView
            android:id="@+id/ziyuan_icon_zhiwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/jbzy_icon_margintop_bottom"
            android:background="@drawable/ziyuan_icon_zhiwu" />

        <com.bosi.chineseclass.han.view.IconImageView
            android:id="@+id/ziyuan_icon_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/jbzy_icon_margintop_bottom"
            android:src="@drawable/ziyuan_icon_game" />
        <View 
            android:id="@+id/ziyuan_center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"/>

        <com.bosi.chineseclass.han.view.IconImageView
            android:id="@+id/ziyuan_icon_ziran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ziyuan_center_horizontal"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="@dimen/jbzy_icon_marginleft_right"
            android:background="@drawable/ziyuan_icon_ziran" />

        <com.bosi.chineseclass.han.view.IconImageView
            android:id="@+id/ziyuan_icon_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ziyuan_center_horizontal"
            android:layout_marginLeft="@dimen/jbzy_icon_marginleft_right"
            android:layout_marginTop="18dp"
            android:background="@drawable/ziyuan_icon_other" />

        <com.bosi.chineseclass.han.view.IconImageView
            android:id="@+id/ziyuan_icon_ren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ziyuan_center_horizontal"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="@dimen/jbzy_icon_marginleft_right"
            android:layout_alignParentRight="true"
            android:background="@drawable/ziyuan_icon_ren" />

        <com.bosi.chineseclass.han.view.IconImageView
            android:id="@+id/ziyuan_icon_qiwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ziyuan_center_horizontal"
            android:layout_marginRight="@dimen/jbzy_icon_marginleft_right"
            android:layout_marginTop="18dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ziyuan_icon_qiwu" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_zjjzy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/jbzy_zjjzy_bt_selector" >
    </Button>

</RelativeLayout>