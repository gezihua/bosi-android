<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_bg"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_bosilogo" >
    </ImageView>

    <ImageView
        android:id="@+id/hint_class_bg"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_classhint" >
    </ImageView>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_input_login_info" >

        <ImageView
            android:id="@+id/iv_hint_tici"
            android:layout_width="55dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_hint_tici" >
        </ImageView>

        <RelativeLayout
            android:id="@+id/rl_inputlogin_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_hint_tici" >

            <TextView
                android:id="@+id/hint_account"
                style="@style/bosi_textstyle_smalltitle"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="登录名" />

            <EditText
                android:id="@+id/et_account"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/hint_account"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/hint_password"
                style="@style/bosi_textstyle_smalltitle"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_account"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="密  码" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_below="@+id/et_account"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/hint_password"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/hint_mobile"
                style="@style/bosi_textstyle_smalltitle"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_password"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="手机号" />

            <EditText
                android:id="@+id/et_phonenum"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_below="@+id/et_password"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/hint_mobile"
                android:inputType="number"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bt_login"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_below="@+id/et_phonenum"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/icon_bt_logion" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:id="@+id/iv_login_exit"
        android:background="@drawable/icon_login_exit" >
    </ImageView>

</RelativeLayout>