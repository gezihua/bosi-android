<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/pupu_basicbg"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
           android:paddingRight="5dp"
            android:id="@+id/main_popu_rl_instrohowtuse"
            >
            <ImageView
                android:layout_width="20dp"
                android:id="@+id/hint_img_aboutbs"
                android:layout_height="20dp"
                android:background="@drawable/main_remote_instro_icon"
                ></ImageView>
            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:background="#000000"
                android:alpha="0.1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/hint_img_aboutbs"
                ></View>
            <TextView
                android:layout_toRightOf="@+id/hint_img_aboutbs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16sp"
                android:text="使用说明"
                ></TextView>
        </RelativeLayout>
        
        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:paddingLeft="2dp"
            android:alpha="0.1"
            android:paddingRight="2dp"
            android:background="#000000"
            ></View>
        
        
        <RelativeLayout
            android:id="@+id/main_popu_rl_userlimit"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
           android:paddingRight="5dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:id="@+id/hint_img_register"
                android:layout_height="20dp"
                android:background="@drawable/main_remote_limittime_icon"
                ></ImageView>
            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:background="#000000"
                android:alpha="0.1"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/hint_img_register"
                ></View>
            <TextView
                android:layout_toRightOf="@+id/hint_img_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16sp"
                android:text="使用期限"
                ></TextView>
        </RelativeLayout>
        
    </LinearLayout>
    

</LinearLayout>
