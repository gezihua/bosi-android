<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_activity" >

    <include
        android:id="@+id/headactionbar"
        layout="@layout/common_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headactionbar"
        android:layout_margin="0dp"
        android:background="@drawable/bg_fragment_jbzy"
        android:orientation="horizontal"
        android:padding="6dp" >

        <FrameLayout
            android:id="@+id/layout_frame_ziyuan_bishu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_frame_ziyuan_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="2" >
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>