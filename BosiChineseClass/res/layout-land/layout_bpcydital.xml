<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/headactionbar"
        layout="@layout/common_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/temp_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cyname"
                android:layout_margin="5dp"
                style="@style/bosi_textstyle_title"
                android:text="人为刀俎，我为鱼肉"
                />
            <ImageView
                android:id="@+id/iv_cyspeak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_cyname"
                ></ImageView>
            <View
                android:id="@+id/hint_view_bpcy_spit"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_cyname"
                android:background="@drawable/line" >
            </View>
            
               <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cypinyin"
                android:layout_margin="5dp"
                android:layout_below="@+id/hint_view_bpcy_spit"
                style="@style/bosi_textstyle_title"
                android:text="ren wei dao zu ,wo wei yu rou"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/ll_bpcy_dital_video"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:layout_above="@+id/bt_word_pad"
                android:orientation="vertical" >
            </LinearLayout>

            <ScrollView
                android:id="@+id/sc_tv_bpcy_insto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/ll_bpcy_stastic"
                android:layout_toRightOf="@+id/ll_bpcy_dital_video"
                android:minHeight="120dp"
                 android:background="@drawable/pinyin_sybg"
                android:minWidth="120dp" >

                <TextView
                    android:id="@+id/tv_bpcy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </TextView>
            </ScrollView>

                  <ImageButton
                       android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                    android:id="@+id/bt_word_pad"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:background="@drawable/kaqi"
                   />
                

            <LinearLayout
                android:id="@+id/ll_bpcy_stastic"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>